{
    "name": "friendsofcodeigniter/encore_codeigniter4",
    "description": "This is my package Encore",
    "keywords": [
        "friendsofcodeigniter",
        "encore_codeigniter4"
    ],
    "homepage": "https://github.com/friendsofcodeigniter/encore-codeigniter4",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter",
            "email": "paradinight@friendsofcodeigniter.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "codeigniter4/framework": "^4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Friendsofcodeigniter\\Encore\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Friendsofcodeigniter\\Encore\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "/vendor/bin/psalm",
        "test": "/vendor/bin/phpunit",
        "test-coverage": "/vendor/bin/phpunit --coverage-html coverage",
        "format": "/vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
